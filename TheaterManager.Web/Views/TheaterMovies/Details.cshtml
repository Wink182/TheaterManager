@model TheaterManager.Domain.TheaterMovie

@{
    ViewBag.Title = "Showtime";
}

<h2>Showtime</h2>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-danger" })
    <hr />
    <dl>
        <dt>
            Theater
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theater.Name)
        </dd>

        <dt>
