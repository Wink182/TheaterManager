        </dt>

        <dd>
            @Html.DisplayFor(model => model.Movie.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Showtime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Showtime)
        </dd>

    </dl>
